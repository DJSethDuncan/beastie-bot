{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "baseUrl": "./types",
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSources": true,

    // Set `sourceRoot` to  "/" to strip the build path prefix
    // from generated source code references.
    // This improves issue grouping in Sentry.
    "sourceRoot": "/"
  },
  "include": ["/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
